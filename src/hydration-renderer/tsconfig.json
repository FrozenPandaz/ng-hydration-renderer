{
	"compilerOptions": {
		"baseUrl": "",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"mapRoot": "./",
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es5",
		"types": [ "node" ]
	},
	"files": [
		"hydration-renderer.module.ts",
		"hydration-renderer.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"angularCompilerOptions": {
		"genDir": "dist",
		"annotateForClosureCompiler": true,
		"strictMetadataEmit": true
	}
}
